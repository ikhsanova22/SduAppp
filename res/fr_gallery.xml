<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="500dp"
                    android:layout_height="320dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/ph1" />

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="500dp"
                    android:layout_height="320dp"
                    app:srcCompat="@drawable/ph2"
                    android:scaleType="fitStart"/>

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="500dp"
                    android:layout_height="320dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/ph3" />

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="500dp"
                    android:layout_height="320dp"
                    app:srcCompat="@drawable/ph4"
                    android:scaleType="fitStart"/>

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="500dp"
                    android:layout_height="320dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/ph5" />

                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="500dp"
                    android:layout_height="320dp"
                    app:srcCompat="@drawable/ph6"
                    android:scaleType="fitStart"/>

                <ImageView
                    android:id="@+id/imageView18"
                    android:layout_width="500dp"
                    android:layout_height="320dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/ph7" />

                <ImageView
                    android:id="@+id/imageView19"
                    android:layout_width="500dp"
                    android:layout_height="320dp"
                    app:srcCompat="@drawable/ph8"
                    android:scaleType="fitStart"/>

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="500dp"
                    android:layout_height="320dp"
                    app:srcCompat="@drawable/ph9"
                    android:scaleType="fitStart"/>

            </LinearLayout>
        </HorizontalScrollView>


    </LinearLayout>

</ScrollView>