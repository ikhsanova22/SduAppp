<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:id="@+id/content_main"
    tools:context=".MainActivity"
    >

    <ImageView
        android:id="@+id/sdu_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scaleType="fitStart"
        android:src="@drawable/sdu_1"
        android:layout_above="@id/table_layout"
        android:layout_marginTop="30dp"/>

    <TableLayout
        android:id="@+id/table_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="290dp"
        android:layout_weight="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <Button
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#FFF"
                android:drawableTop="@drawable/university_icon"
                android:text="About" />

            <Button
                android:id="@+id/faculty"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#FFF"
                android:drawableTop="@drawable/faculties_icon"
                android:text="Faculties" />

            <Button
                android:id="@+id/photo"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#FFF"
                android:drawableTop="@drawable/photos_icon"
                android:text="Gallery" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="249dp">

            <Button
                android:id="@+id/news"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#FFF"
                android:drawableTop="@drawable/news_icon"
                android:text="News" />

            <Button
                android:id="@+id/staff"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#FFF"
                android:drawableTop="@drawable/staff_icon"
                android:text="Staff" />

            <Button
                android:id="@+id/contacts"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#FFF"
                android:drawableTop="@drawable/contacts_icon"
                android:text="Contacts" />

        </TableRow>

    </TableLayout>

    <ImageView
        android:id="@+id/sdu_logo_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="30dp"

        android:padding="50dp"
        android:scaleType="fitEnd"
        android:src="@drawable/logo_2"
        />


</android.support.v4.widget.DrawerLayout>